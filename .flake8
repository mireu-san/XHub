[flake8]
# W503 and W504 are mutually exclusive and PEP 8 recommends breaking lines before binary operators
ignore = W293, W503, E127, E128, E203, E266, E302, E402, E501
max-line-length = 200
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    settings.py,
    # Ignore manage.py as it's autogenerated
    manage.py,
    # Ignore migrations as they're autogenerated
    */migrations/*,
    # Ignore init files
    __init__.py,
    # Ignore test directory
    tests.py,
    # Ignore any virtual environments
    venv*